{
  "name": "your-app-name",
  "productName": "Your App Name",
  "version": "0.0.0",
  "description": "Your Electron application description",
  "main": "./.webpack/main",
  "author": {
    "name": "Fritz Engelhardt",
    "email": "87179608+EngelhardtFritz@users.noreply.github.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EngelhardtFritz/manga-reader.git"
  },
  "keywords": [
    "electron",
    "angular",
    "typescript",
    "webpack",
    "ngrx",
    "template"
  ],
  "scripts": {
    "--------------------------- DEV SCRIPTS ------------------------------": "",
    "start": "npm-run-all --parallel watch:shared watch:angular watch:electron",
    "package": "npm run build && electron-forge package -- --buildMode=dev",
    "make": "npm run build && electron-forge make -- --buildMode=dev",
    "publish": "npm run build && electron-forge publish -- --buildMode=dev",
    "--------------------------- PROD SCRIPTS -----------------------------": "",
    "package:prod": "npm run build:prod && electron-forge package -- --buildMode=prod",
    "package:msi:prod": "npx ts-node ./msi-wizard.provider.ts",
    "make:prod": "npm run build:prod && electron-forge make -- --buildMode=prod",
    "publish:prod": "npm run build:prod && electron-forge publish -- --buildMode=prod",
    "--------------------------- UTILITY SCRIPTS --------------------------": "",
    "postinstall": "install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "start:once": "npm-run-all --parallel start:angular start:electron",
    "start:angular": "cd workspaces/angular-app && npm run start",
    "start:electron": "electron-forge start",
    "watch:shared": "cd workspaces/shared-lib && npm run watch",
    "watch:angular": "cd workspaces/angular-app && npm run watch",
    "watch:electron": "node scripts/electron-forge-watcher.js",
    "build": "npm run build:shared && npm run build:angular:prod",
    "build:shared": "cd workspaces/shared-lib && npm run build",
    "build:angular": "cd workspaces/angular-app && npm run build",
    "build:prod": "npm-run-all build:shared:prod build:angular:prod",
    "build:shared:prod": "cd workspaces/shared-lib && npm run build:prod",
    "build:angular:prod": "cd workspaces/angular-app && npm run build:prod",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "electron:publish": "electron-forge publish",
    "--------------------------- LINTING SCRIPTS --------------------------": "",
    "prettier": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,html,md}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,html,md}\"",
    "lint": "eslint --ext .ts .",
    "lint:git": "lint-staged -q",
    "lint:fix": "eslint --fix --ext .ts .",
    "stylelint": "stylelint \"**/*.{css,scss,sass}\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss,sass}\" --fix"
  },
  "workspaces": [
    "workspaces/angular-app",
    "workspaces/electron-app",
    "workspaces/shared-lib"
  ],
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix",
    "*.{css,scss}": "npm run stylelint:fix",
    "*.{html,json,md,ts,js}": "npm run prettier:fix"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/rebuild": "^4.0.1",
    "@types/lodash": "^4.17.19",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-wix-msi": "^5.1.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "node-loader": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^4.0.0",
    "stylelint": "^16.21.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.3.0",
    "rxjs": "^7.8.2",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0"
  },
  "overrides": {
    "@electron/rebuild": {
      "node-abi": "4.9.0"
    }
  }
}
